package com.turmab.helpdesk;

import org.slf4j.Logger;
import org.slf4j.LoggerFactory;
import org.springframework.boot.SpringApplication;
import org.springframework.boot.autoconfigure.SpringBootApplication;
import org.springframework.boot.context.event.ApplicationReadyEvent;
import org.springframework.context.event.EventListener;

@SpringBootApplication
public class HelpdeskturmabApplication {

    private static final Logger log = LoggerFactory.getLogger(HelpdeskturmabApplication.class);

    public static void main(String[] args) {
        SpringApplication app = new SpringApplication(HelpdeskturmabApplication.class);
        
        // Adiciona um listener diretamente no contexto da aplicação
        app.addListeners(event -> {
            if (event instanceof ApplicationReadyEvent) {
                log.info("******************************************");
                log.info("APLICAÇÃO HELPDESK INICIADA COM SUCESSO!");
                log.info("******************************************");
            }
        });

        app.run(args);
    }
}